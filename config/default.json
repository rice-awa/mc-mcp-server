{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "ping_interval": 30,
    "ping_timeout": 15,
    "close_timeout": 15,
    "max_size": 10485760,
    "max_queue": 64,
    "read_limit": 65536,
    "write_limit": 65536
  },
  "mcp": {
    "name": "Minecraft Assistant",
    "description": "A Minecraft assistant that can interact with the game through MCP",
    "version": "1.0.0"
  },
  "llm": {
    "model": "deepseek-ai/DeepSeek-R1",
    "api_url": "",
    "enable_history": true,
    "output_think": true,
    "system_prompt": "请始终保持积极和专业的态度。回答尽量保持一段话不要太长，适当添加换行符，尽量不要使用markdown"
  },
  "auth": {
    "required": true,
    "token_expiry": 86400
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/server.log"
  }
} 